.nav {
    display: flex;
    height: 90rpx;
    justify-content: space-around;
}

.nav .item {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 190rpx;
    height: 90rpx;
    color: #353130;
    font-size: 28rpx;
}

.nav .item.active {
    color: #26abd6;
    border-bottom: 2px solid #26abd6;
}

.list {
    min-height: calc(100% - 90rpx);
    background-color: #f0f0f0;
    padding: 40rpx 60rpx;
}

.list .coupon {
    width: 100%;
    height: 260rpx;
}

.bottom {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
}

.btn {
    position: fixed;
    bottom: 0;
    z-index: 3;
    width: 100%;
    min-height: 100rpx;
    display: flex;
}

.btn .item {
    flex: 1;
    display: flex;
    min-height: 100rpx;
}